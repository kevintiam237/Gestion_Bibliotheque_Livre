<UserControl x:Class="Gestion_Bibliotheque_Livre.Views.AccueilPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:properties="clr-namespace:Gestion_Bibliotheque_Livre.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="600" 
             d:DesignWidth="800"
             Background="{StaticResource BackgroundGradient}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Style="{StaticResource StackPanelAccueilStyle}">

            <!-- Message de bienvenue principal -->
            <Border Style="{StaticResource BorderGeneralAccueil}">
                <StackPanel>
                    <TextBlock x:Name="WelcomeTitleTextBlock" Text="{x:Static properties:Resources.WelcomeTitle}" 
                               Style="{StaticResource TextBoxTitle}"/>
                    <TextBlock x:Name="WelcomeSubtitleTextBlock" Text="{x:Static properties:Resources.WelcomeSubtitle}"
                               Style="{StaticResource TextBoxSubTitle}"/>
                </StackPanel>
            </Border>

            <!-- Section d'introduction -->
            <Border Style="{StaticResource SecondBorder}">
                <StackPanel>
                    <TextBlock x:Name="ExploreTitleTextBlock" Text="{x:Static properties:Resources.ExploreTitle}"
                               Style="{StaticResource TextBoxSecondTitle}"/>
                    <TextBlock x:Name="ExploreDescriptionTextBlock" Text="{x:Static properties:Resources.ExploreDescription}"
                               Style="{StaticResource TextBoxSecondSubTitle}"/>
                </StackPanel>
            </Border>

            <!-- Points forts -->
            <WrapPanel Style="{StaticResource WrapPanelPointsForts}">

                <!-- Point 1 -->
                <Border Style="{StaticResource PointFortCard}">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="📖" Style="{StaticResource PointFortIcon}"/>
                        <TextBlock x:Name="Feature1TitleTextBlock" Text="{x:Static properties:Resources.Feature1Title}" 
                                   Style="{StaticResource PointFortTitle}"/>
                        <TextBlock x:Name="Feature1DescriptionTextBlock" Text="{x:Static properties:Resources.Feature1Description}"
                                   Style="{StaticResource PointFortDescription}"/>
                    </StackPanel>
                </Border>

                <!-- Point 2 -->
                <Border Style="{StaticResource PointFortCard}">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="👤" Style="{StaticResource PointFortIcon}"/>
                        <TextBlock x:Name="Feature2TitleTextBlock" Text="{x:Static properties:Resources.Feature2Title}" 
                                   Style="{StaticResource PointFortTitle}"/>
                        <TextBlock x:Name="Feature2DescriptionTextBlock" Text="{x:Static properties:Resources.Feature2Description}"
                                   Style="{StaticResource PointFortDescription}"/>
                    </StackPanel>
                </Border>

                <!-- Point 3 -->
                <Border Style="{StaticResource PointFortCard}">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="🏷️" Style="{StaticResource PointFortIcon}"/>
                        <TextBlock x:Name="Feature3TitleTextBlock" Text="{x:Static properties:Resources.Feature3Title}" 
                                   Style="{StaticResource PointFortTitle}"/>
                        <TextBlock x:Name="Feature3DescriptionTextBlock" Text="{x:Static properties:Resources.Feature3Description}"
                                   Style="{StaticResource PointFortDescription}"/>
                    </StackPanel>
                </Border>
            </WrapPanel>

            <!-- Citation ou message inspirant -->
            <Border Style="{StaticResource PrimaryCars}">
                <StackPanel>
                    <TextBlock x:Name="QuoteTextTextBlock" Text="{x:Static properties:Resources.QuoteText}"
                               Style="{StaticResource CitationText}"/>
                    <TextBlock x:Name="QuoteAuthorTextBlock" Text="{x:Static properties:Resources.QuoteAuthor}"
                               Style="{StaticResource AuteurCitation}"/>
                </StackPanel>
            </Border>

            <!-- Instructions de navigation -->
            <Border Style="{StaticResource NavigationBorder}">
                <StackPanel>
                    <TextBlock x:Name="NavigationTitleTextBlock" Text="{x:Static properties:Resources.NavigationTitle}"
                               Style="{StaticResource NavigationTitle}"/>
                    <TextBlock x:Name="NavigationDescriptionTextBlock" Text="{x:Static properties:Resources.NavigationDescription}"
                               Style="{StaticResource NavigationDescription}"/>
                </StackPanel>
            </Border>

            <!-- Message de statut -->
            <TextBlock x:Name="StatusMessageTextBlock" Text="{x:Static properties:Resources.StatusMessage}"
                       Style="{StaticResource StatusTextStyle}"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>